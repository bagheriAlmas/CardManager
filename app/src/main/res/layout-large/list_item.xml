<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="96dp"
    android:layout_margin="5dp"
    android:layoutDirection="ltr"
    android:gravity="center|right"

    android:orientation="horizontal"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:layout_marginRight="10dp"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/list_item_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginBottom="-3dp"
            android:fontFamily="@font/yekan"
            android:gravity="right|bottom"
            android:singleLine="true"
            android:text=" کارت بانک کشاورزی djfjdfjdfojisdfosijffsijfeo"
            android:textColor="#707070"
            android:textDirection="ltr"
            android:textSize="25dp" />

        <TextView
            android:id="@+id/list_item_txtNumber"
            android:layout_width="match_parent"
            android:layout_height="29dp"
            android:layout_marginTop="-4dp"
            android:fontFamily="@font/yekan"
            android:gravity="right|top"
            android:text="6037-7011-7898-6432"
            android:textColor="#aeaeae"
            android:textSize="23dp" />


    </LinearLayout>

    <LinearLayout
        android:layout_width="96dp"
        android:layout_height="96dp"
        android:gravity="center"
        android:padding="5dp">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/list_item_imgBank"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ico_keshavarzi"
            app:civ_border="true"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="2dp" />
    </LinearLayout>


</LinearLayout>
