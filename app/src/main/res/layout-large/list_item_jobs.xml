<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    tools:ignore="MissingDefaultResource">

    <ImageView
        android:id="@+id/list_item_job_imgArrow"
        android:layout_width="42dp"
        android:layout_height="72dp"
        android:layout_marginRight="16dp"
        android:padding="13dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/arrow_green" />

    <TextView
        android:id="@+id/list_item_job_txtDescription"
        android:layout_width="wrap_content"
        android:layout_height="22dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"
        android:fontFamily="@font/yekan"
        android:gravity="right|bottom"

        android:text="az karte baba bardashtam"
        android:textColor="#34495e"
        android:textDirection="ltr"
        android:textSize="20dp"
        app:layout_constraintEnd_toStartOf="@+id/list_item_job_imgArrow"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/list_item_job_txtDate"

        android:layout_width="wrap_content"
        android:layout_height="18dp"
        android:layout_marginBottom="28dp"
        android:layout_marginEnd="12dp"
        android:layout_marginRight="16dp"
        android:layout_weight="1"
        android:fontFamily="@font/yekan"

        android:gravity="right|top"
        android:text="96/12/19"
        android:textColor="#7f8c8d"
        android:textSize="17dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/list_item_job_imgArrow" />

    <TextView
        android:id="@+id/list_item_job_txtCost"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="24dp"
        android:layout_weight="1"

        android:fontFamily="@font/yekan"
        android:gravity="center|bottom"
        android:text="+5000000"
        android:textSize="@dimen/TextView_TextSize"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView

        android:id="@+id/list_item_job_txtLastCost"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="28dp"
        android:layout_marginLeft="16dp"
        android:layout_weight="1"

        android:fontFamily="@font/yekan"
        android:gravity="center|top"
        android:text="4500000"
        android:textSize="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>

