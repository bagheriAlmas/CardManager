<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:gravity="center|top"
    android:orientation="vertical"
    android:layoutDirection="ltr"
    android:padding="@dimen/ViewMargin"
    tools:ignore="MissingDefaultResource">


    <LinearLayout
        android:layout_width="@dimen/linearImgBankSize"
        android:layout_height="@dimen/linearImgBankSize"
        android:gravity="center">

        <com.mikhaellopez.circularimageview.CircularImageView
            android:id="@+id/addCard_imgBank"
            android:layout_width="@dimen/imgBankSize"
            android:layout_height="@dimen/imgBankSize"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
            android:src="@drawable/ico_unknow"
            app:civ_border="true"
            app:civ_border_color="@color/colorPrimary"
            app:civ_border_width="@dimen/imgBankBorder" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <EditText
            android:textDirection="ltr"
            android:id="@+id/addCard_txtNumber"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_Height"
            android:background="@drawable/text_style"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:inputType="number"
            android:hint=" شماره کارت"
            android:maxLength="16"
            android:singleLine="true"
            android:paddingLeft="@dimen/EditText_Padding"
            android:paddingRight="@dimen/EditText_Padding"
            android:textColor="#b5b5b5"
            android:textColorHint="#b5b5b5"
            android:textSize="@dimen/EditText_TextSize" />

        <EditText
            android:id="@+id/addCard_txtTitle"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_Height"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_style"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:hint="نام بانک"
            android:maxLength="30"
            android:singleLine="true"
            android:paddingLeft="@dimen/EditText_Padding"
            android:paddingRight="@dimen/EditText_Padding"
            android:textColor="#b5b5b5"
            android:textColorHint="#b5b5b5"
            android:textSize="@dimen/EditText_TextSize" />


        <EditText
            android:id="@+id/addCard_txtMoney"
            android:layout_width="match_parent"
            android:layout_height="@dimen/EditText_Height"
            android:layout_marginTop="20dp"
            android:background="@drawable/text_style"
            android:fontFamily="@font/yekan"
            android:gravity="center"
            android:hint="موجودی"
            android:inputType="number"
            android:singleLine="true"
            android:maxLength="20"
            android:paddingLeft="@dimen/EditText_Padding"
            android:paddingRight="@dimen/EditText_Padding"
            android:textColor="#b5b5b5"
            android:textColorHint="#b5b5b5"
            android:textSize="@dimen/EditText_TextSize" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">


            <Button
                android:id="@+id/addCard_btnAdd"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_Height"
                android:layout_marginTop="50dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/yekan"
                android:text="افزودن کارت"
                android:textColor="#ffffff"
                android:textSize="@dimen/EditText_TextSize" />

        </LinearLayout>

    </LinearLayout>
</LinearLayout>