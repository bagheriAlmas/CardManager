<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:layoutDirection="ltr"
    android:paddingBottom="@dimen/ViewMargin"
    android:paddingLeft="@dimen/ViewMargin"
    android:paddingRight="@dimen/ViewMargin"

    tools:context="ir.almasapps.almascardmanager.MainActivity">


    <include layout="@layout/content_main" />

    <Button
        android:id="@+id/fab"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_gravity="bottom|start"
        android:layout_margin="@dimen/ViewMargin"
        android:background="@drawable/button_style"
        android:text="+"
        android:textColor="#ffffff"
        android:textSize="40sp" />

</androidx.coordinatorlayout.widget.CoordinatorLayout>
