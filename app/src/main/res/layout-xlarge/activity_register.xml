<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/ViewMargin"
    android:paddingRight="@dimen/ViewMargin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:layoutDirection="ltr"

    tools:context="ir.almasapps.almascardmanager.Register"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:gravity="center">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/almas_typography_red" />
    </LinearLayout>


    <ScrollView
        android:id="@+id/login_form"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/email_login_form"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <EditText
                android:id="@+id/register_username"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_Height"
                android:background="@drawable/text_style"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:hint="@string/prompt_username"
                android:paddingLeft="@dimen/EditText_Padding"
                android:paddingRight="@dimen/EditText_Padding"
                android:singleLine="true"
                android:textColor="#b5b5b5"
                android:textColorHint="#b5b5b5"
                android:textSize="@dimen/EditText_TextSize" />

            <EditText
                android:id="@+id/register_password"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_Height"
                android:layout_marginTop="40dp"
                android:background="@drawable/text_style"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:hint="@string/prompt_password"
                android:inputType="numberPassword"
                android:paddingLeft="@dimen/EditText_Padding"
                android:paddingRight="@dimen/EditText_Padding"
                android:singleLine="true"
                android:textColor="#b5b5b5"
                android:textColorHint="#b5b5b5"
                android:textSize="@dimen/EditText_TextSize" />

            <EditText
                android:id="@+id/register_password_2"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_Height"
                android:layout_marginTop="40dp"
                android:background="@drawable/text_style"
                android:fontFamily="@font/yekan"
                android:gravity="center"
                android:hint="@string/prompt_password2"
                android:inputType="numberPassword"
                android:paddingLeft="@dimen/EditText_Padding"
                android:paddingRight="@dimen/EditText_Padding"
                android:singleLine="true"
                android:textColor="#b5b5b5"
                android:textColorHint="#b5b5b5"
                android:textSize="@dimen/EditText_TextSize" />

            <Button
                android:id="@+id/register_btnRegister"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="@dimen/EditText_Height"
                android:layout_marginTop="100dp"
                android:background="@drawable/button_style"
                android:fontFamily="@font/yekan"
                android:text="@string/action_register"

                android:textColor="#ffffff"
                android:textSize="@dimen/EditText_TextSize" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
